# Uncomment the next line to define a global platform for your project

# platform :ios, '9.0'

target 'lucriment' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for Firebase
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  
  # Pods for Facebook Authentication
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'
  
  # Pods for Google Authentication
  pod 'GoogleSignIn'
  
  # Pods for Google Maps
  pod 'GoogleMaps'
  pod 'GooglePlaces'
  pod 'GooglePlacePicker'
  
  # Other Pods
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'SDWebImage'
  pod 'ReachabilitySwift', '~> 3'
  pod 'MBProgressHUD', '~> 1.0.0'
  pod 'JTAppleCalendar'
  pod 'InputMask'
  pod 'SwiftMessages'
  pod 'Cosmos'
  pod 'Stripe'

end
